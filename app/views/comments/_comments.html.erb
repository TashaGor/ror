<% unless object.comments.empty? %>

    <div id="post_comments">
      <strong>Комментарии:</strong>
      <hr>
      <ul class="list-unstyled">
        <% object.comments.each do |c| %>
            <li>
              <blockquote><small><%= c.body %></small></blockquote>
              <small><cite><%= c.created_at.strftime("%d %b %Y at %H:%M") %></cite></small>
              <hr>
              <% if current_user && current_user.author_of?(c) %>
                  <%= link_to 'Edit', edit_comment_path(c) %>
                  <%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
<% else %>
    <p>Комментариев пока нет. Оставьте комментарий первым.</p>
<% end %>